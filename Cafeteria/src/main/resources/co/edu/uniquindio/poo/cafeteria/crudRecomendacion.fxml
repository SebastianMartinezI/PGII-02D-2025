<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="co.edu.uniquindio.poo.cafeteria.viewController.RecomendacionViewController"
            prefWidth="500" prefHeight="400">
    <VBox spacing="10" alignment="CENTER" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10"
          AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10">

        <Label text="Gestión de Recomendaciones" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

        <TableView fx:id="tableRecomendaciones" prefHeight="250" prefWidth="480">
            <columns>
                <TableColumn fx:id="colMensaje" text="Mensaje" prefWidth="450"/>
            </columns>
        </TableView>

        <HBox spacing="10">
            <TextField fx:id="txtMensaje" promptText="Mensaje de recomendación"/>
            <Button fx:id="btnAgregar" text="Agregar" onAction="#agregarRecomendacion"/>
            <Button fx:id="btnEliminar" text="Eliminar" onAction="#eliminarRecomendacion"/>
        </HBox>
    </VBox>
</AnchorPane>
