<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="co.edu.uniquindio.poo.cafeteria.viewController.DescuentoViewController"
            prefWidth="500" prefHeight="400">
    <VBox spacing="10" alignment="CENTER" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10"
          AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10">

        <Label text="Gestión de Descuentos" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

        <TableView fx:id="tableDescuentos" prefHeight="250" prefWidth="480">
            <columns>
                <TableColumn fx:id="colCantidad" text="Cantidad mínima" prefWidth="150"/>
                <TableColumn fx:id="colPorcentaje" text="Porcentaje descuento" prefWidth="150"/>
            </columns>
        </TableView>

        <HBox spacing="10">
            <TextField fx:id="txtCantidad" promptText="Cantidad mínima"/>
            <TextField fx:id="txtPorcentaje" promptText="Porcentaje"/>
            <Button fx:id="btnAgregar" text="Agregar" onAction="#agregarDescuento"/>
            <Button fx:id="btnEliminar" text="Eliminar" onAction="#eliminarDescuento"/>
        </HBox>
    </VBox>
</AnchorPane>
