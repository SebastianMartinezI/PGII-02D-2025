<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="co.edu.uniquindio.poo.cafeteria.viewController.PrimaryController"
      spacing="10" alignment="CENTER">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Button text="Gestionar Clientes" onAction="#abrirClientes"/>
    <Button text="Gestionar Productos" onAction="#abrirProductos"/>
    <Button text="Gestionar Pedidos" onAction="#abrirPedidos"/>
    <Button text="Gestionar Descuentos" onAction="#abrirDescuentos"/>
    <Button text="Gestionar Recomendaciones" onAction="#abrirRecomendaciones"/>

</VBox>
