<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="co.edu.uniquindio.poo.cafeteria.viewController.ProductoViewController"
            prefWidth="600" prefHeight="400">

    <VBox spacing="10" alignment="CENTER" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10"
          AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10">
        <TableView fx:id="tableProductos" prefHeight="200" prefWidth="580">
            <columns>
                <TableColumn fx:id="colNombre" text="Nombre"/>
                <TableColumn fx:id="colPrecio" text="Precio"/>
                <TableColumn fx:id="colStock" text="Stock"/>
            </columns>
        </TableView>

        <HBox spacing="10">
            <TextField fx:id="txtNombre" promptText="Nombre"/>
            <TextField fx:id="txtPrecio" promptText="Precio"/>
            <TextField fx:id="txtStock" promptText="Stock"/>
            <Button fx:id="btnAgregar" text="Agregar" onAction="#agregarProducto"/>
            <Button fx:id="btnEliminar" text="Eliminar" onAction="#eliminarProducto"/>
        </HBox>
    </VBox>
</AnchorPane>
